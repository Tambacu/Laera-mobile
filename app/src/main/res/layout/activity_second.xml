<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="@color/LittleBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_second">

        <ImageView
            android:id="@+id/topoincial"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:src="@drawable/topoinicial"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Populares"
            app:layout_constraintTop_toBottomOf="@id/topoincial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="-20dp"
            android:textAllCaps="true"
            />
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/topoincial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- First Image and Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_python"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/pythonguana"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso Python - Seja um Programador"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Second Image and Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_java"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/javaguana"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso de Java para Iniciantes - Grátis, Completo e com Certificado"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Third Image and Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_Dollar"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/thumb2"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso de Investimentos do Básico ao Avançado"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Fourth Image and Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_Costura"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/thumb3"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso de Corte e Costura Online Grátis Para Iniciantes"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Fifth Image and Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_Gastronomia"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/thumb4"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso de Gastronomia Básica Online Grátis "
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Sixth Image and Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_Youtuber"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/cursoyoutuber"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso de Design Gráfico - Academia de Criadores Premium"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton_Youtuber"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/cursoportugues"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso gratuito de Português para imigrantes - Missão Paz"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"/>
            </LinearLayout><LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_cursoingles"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/cursoingles"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CURSO DE INGLÊS BÁSICO GRÁTIS E COMPLETO"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
